<%= form_for @user, html: {multipart:true} do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :role %>
    <%= f.number_field :role %>
  </div>

  <div class="field">
    <%= f.label :profile %><br>
    <%= f.file_field :profile %>
    <%= f.text_field :remote_profile_url %>
    <%= f.hidden_field :profile_cache %>
    <%= image_tag(@user.profile, class:"img-responsive") if @user.profile? %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
